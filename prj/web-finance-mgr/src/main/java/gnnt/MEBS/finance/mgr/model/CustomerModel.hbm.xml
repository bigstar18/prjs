<?xml version="1.0" encoding="GBK"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<!--
	通过配置文件配置 Model 类与数据库表之间的字段联系
	将本配置文件配置到 hibernate.cfg.xml 中
-->
<hibernate-mapping>
	<class name="gnnt.MEBS.finance.mgr.model.CustomerModel" table="MGR_CUSTOMER" dynamic-update="true" lazy="false">
		<id name="customerId">
			<generator class="native">
				<param name="sequence">SEQ_MGR_CUSTOMER</param>
			</generator>
		</id>
		<property name="name" />
		<property name="fullName" />
		<property name="cardType" />
		<property name="card" />
		<property name="type" />
		<property name="bankCode" />
		<property name="bankAccount" />
		<property name="address" />
		<property name="contactMan" />
		<property name="phone" />
		<property name="email" />
		<property name="postcode" />
		<property name="status" />
		<property name="note" />
		<property name="createTime" insert="false"/>
		<property name="modifyTime" insert="false"/>

		<many-to-one name="user" class="gnnt.MEBS.common.mgr.model.User" column="userId" />
		<many-to-one name="firm" class="gnnt.MEBS.common.mgr.model.usermanage.MFirm" column="firmId" />
	</class>
</hibernate-mapping>

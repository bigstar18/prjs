<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>BugServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.BugServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BugServlet</servlet-name>
		<url-pattern>/bug</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>eventApply</servlet-name>
		<servlet-class>com.uyoung.event.web.ProxyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>eventApply</servlet-name>
		<url-pattern>/proxy.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>enrollServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.EnrollServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>enrollServlet</servlet-name>
		<url-pattern>/mjxApply.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>voteServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.VoteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>voteServlet</servlet-name>
		<url-pattern>/vote.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>showServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.PicShowServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>showServlet</servlet-name>
		<url-pattern>/show.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>searchServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.SearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>searchServlet</servlet-name>
		<url-pattern>/search.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>pkServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.PkServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>pkServlet</servlet-name>
		<url-pattern>/pk.htm</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>mjxShowServlet</servlet-name>
		<servlet-class>com.uyoung.event.web.MjxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>mjxShowServlet</servlet-name>
		<url-pattern>/mjxhtml.htm</url-pattern>
	</servlet-mapping>
	<session-config>
		<session-timeout>20</session-timeout>
	</session-config>

	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/views/error/500.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/WEB-INF/views/error/500.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/WEB-INF/views/error/404.jsp</location>
	</error-page>
</web-app>
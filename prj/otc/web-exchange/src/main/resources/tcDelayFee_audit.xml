<?xml version="1.0" encoding="GBK"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
         http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-2.5.xsd
        http://www.springframework.org/schema/tx
        http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
        http://www.springframework.org/schema/util
        http://www.springframework.org/schema/util/spring-util-2.5.xsd">




	<!-- 默认延期费设置流程配置begin -->
	<bean id="tcDelayFeeUpdateProcessContext" class="gnnt.MEBS.audit.flowService.common.ProcessContextImpl">
		<property name="finalStatus" value="2" />
		<property name="steps">
			<list>
				<ref bean="tcDelayFeeUdateApplyStep" />
				<ref bean="tcDelayFeeUpdateAuditStep" />
			</list>
		</property>
		<property name="statusOperate" ref="statusOperate" />
	</bean>

	<bean id="tcDelayFeeUdateApplyStep" class="gnnt.MEBS.audit.flowService.common.StepImpl">
		<property name="handleList">
			<list>
				<ref bean="tcDelayFeeUpdateApplyHandle" />
			</list>
		</property>
		<property name="currentStatus">
			<value>0</value>
		</property>
	</bean>

	<bean id="tcDelayFeeUpdateAuditStep" class="gnnt.MEBS.audit.flowService.common.StepImpl">
		<property name="handleList">
			<list>
				<ref bean="tcDelayFeeUpdateAuditHandle" />
				<ref bean="tcDelayFeeRejectAuditHandle" />
			</list>
		</property>
		<property name="currentStatus">
			<value>1</value>
		</property>
	</bean>

	<bean id="tcDelayFeeUpdateApplyHandle" class="gnnt.MEBS.audit.flowService.common.HandleImpl">
		<property name="finalStatus" value="1" />
		<property name="beanName" value="申请修改" />
		<property name="key" value="apply" />
		<property name="behaviour" ref="tcDelayFeeUpdateApplyBehaviour" />
	</bean>
	<bean id="tcDelayFeeUpdateAuditHandle" class="gnnt.MEBS.audit.flowService.common.HandleImpl">
		<property name="finalStatus" value="2" />
		<property name="beanName" value="审核修改" />
		<property name="key" value="audit" />
		<property name="behaviour" ref="tcDelayFeeUpdateAuditBehaviour" />
	</bean>
	<bean id="tcDelayFeeRejectAuditHandle" class="gnnt.MEBS.audit.flowService.common.HandleImpl">
		<property name="finalStatus" value="-2" />
		<property name="beanName" value="驳回修改" />
		<property name="key" value="reject" />
	</bean>

	<bean id="tcDelayFeeUpdateBusinessService" class="gnnt.MEBS.audit.businessService.DelayBusinessService">
		<property name="serrviceName" value="tcDelayFeeService" />
		<property name="methodName" value="update" />
		<property name="classFullName" value="gnnt.MEBS.commodity.model.TCDelayFee" />
	</bean>

	<bean id="tcDelayFeeUpdateApplyBehaviour" class="gnnt.MEBS.audit.flowService.behaviour.AddAuditObject">
	</bean>

	<bean id="tcDelayFeeUpdateAuditBehaviour" class="gnnt.MEBS.audit.flowService.behaviour.BusinessDeal">
		<property name="businessService" ref="tcDelayFeeUpdateBusinessService" />
	</bean>
	<!-- 默认延期费设置流程配置end -->

	<!-- 默认延期费设置申请与审核 start -->
	<bean id="tcDelayFeeJDBCDao" class="gnnt.MEBS.audit.dao.TcDelayFeeJDBCDao"
		autowire="byName"></bean>

	<bean id="tcDelayFeeApplyAction" class="gnnt.MEBS.audit.action.DelayApplyAction"
		scope="request">
		<property name="applyType" value="commodity_tcDelayFee" />
		<property name="operateStatus" value="0" />
		<property name="action" ref="tcDelayFeeAction" />
		<property name="applyJDBCDao" ref="tcDelayFeeJDBCDao" />
	</bean>
	<bean id="tcDelayFeeAuditAction" class="gnnt.MEBS.audit.action.DelayAuditAction"
		scope="request">
		<property name="applyType" value="commodity_tcDelayFee" />
		<property name="operateStatus" value="1" />
		<property name="action" ref="tcDelayFeeAction" />
		<property name="applyJDBCDao" ref="tcDelayFeeJDBCDao" />
	</bean>
	<!-- 默认延期费设置申请与审核 end -->
</beans>
